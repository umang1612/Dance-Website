extends base.pug
block scripts 
    script(src="/static/index.js") 
block style
    style
        include ../static/style.css
block content 
    section#introSection
        div WELCOME TO UMANG DANCE ACADEMY
        div.small Put Your Heart In Dance And Dance Will Never Leave Your Heart
    section#missionSection
        h2 Our Mission 
        div.card 
            h3 BUILDING CONFIDENCE TO DANCE
            div.card-box
                div.card-img
                    img(src="static/image1.png")
                div.card-content
                    p The academy builds confidence to dance at any event

        div.card
            h3 PERFECTION IN DANCE FORM
            div.card-box
                div.card-img
                    img(src="static/image2.png")
                div.card-content
                    p The academy focuses on perfection in dance steps

        div.card
            h3 EXPERTS TRAINING FOR EXCELLENCE
            div.card-box
                div.card-img
                    img(src="static/image3.png")
                div.card-content
                    p Experts guidance helps to excell in the dance field
    section#sponsorsSection
        h2 Our Sponsors
        div#sponsors
            img(src= "static/logo1.png", alt= "Sponsor Image", class= "spImage")
            img(src= "static/logo2.png", alt= "Sponsor Image", class= "spImage")
            img(src= "static/logo 3.png", alt= "Sponsor Image", class= "spImage")
            img(src= "static/logo 4.png", alt= "Sponsor Image", class= "spImage")  
             
   
